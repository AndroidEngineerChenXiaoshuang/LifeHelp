<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/popupWindow_edit_phone"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/pop_keyboard"
        layout="@layout/user_phone_keyboard"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_background_corners_pop"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/edit_phone_popup_return"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/popup_return"
            android:layout_width="18dp"
            android:layout_height="18dp" />
        <Button
            android:id="@+id/edit_phone_popup_delete"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/popup_delete"
            android:layout_width="18dp"
            android:layout_height="18dp" />
        <RelativeLayout
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="135dp">

            <View
                android:layout_marginLeft="65dp"
                android:background="@drawable/shape_kuang"
                android:id="@+id/hour"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <View
                android:layout_marginLeft="125dp"
                android:background="@drawable/shape_kuang"
                android:id="@+id/second"
                android:layout_width="48dp"
                android:layout_height="48dp"
                />
            <View
                android:layout_marginLeft="185dp"
                android:background="@drawable/shape_kuang"
                android:id="@+id/minute"
                android:layout_width="48dp"
                android:layout_height="48dp"
                />

            <View

                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_kuang"
                android:id="@+id/fore"
                android:layout_width="48dp"
                android:layout_height="48dp"
                />
            <!--黑点1-->
            <ImageView
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:id="@+id/black_yanzhen1"
                android:src="@drawable/user_black_yanzhen"
                android:layout_width="20dp"
                android:layout_height="16dp"
                android:layout_alignTop="@+id/black_yanzhen3"
                android:layout_alignLeft="@+id/fore"
                android:layout_alignStart="@+id/fore" />
            <!--黑点2-->
            <ImageView
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:layout_marginLeft="14dp"
                android:id="@+id/black_yanzhen2"
                android:src="@drawable/user_black_yanzhen"
                android:layout_width="20dp"
                android:layout_height="16dp"
                android:layout_alignTop="@+id/black_yanzhen3"
                android:layout_alignLeft="@+id/hour"
                android:layout_alignStart="@+id/hour" />
            <TextView
                android:textColor="#000000"
                android:textSize="22sp"
                android:gravity="center_horizontal"
                android:layout_marginTop="9dp"
                android:visibility="visible"
                android:layout_marginLeft="14dp"
                android:id="@+id/pop_view_text_2"
                android:layout_width="20dp"
                android:layout_height="24dp"
                android:layout_alignTop="@+id/black_yanzhen3"
                android:layout_alignLeft="@+id/hour"
                android:layout_alignStart="@+id/hour" />
            <!--黑点3-->
            <ImageView
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:id="@+id/black_yanzhen3"
                android:src="@drawable/user_black_yanzhen"
                android:layout_width="20dp"
                android:layout_height="16dp"
                android:layout_alignTop="@+id/black_yanzhen4"
                android:layout_alignLeft="@+id/second"
                android:layout_alignStart="@+id/second" />
            <TextView
                android:textColor="#000000"
                android:textSize="22sp"
                android:gravity="center_horizontal"
                android:visibility="visible"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="14dp"
                android:id="@+id/pop_view_text_3"
                android:layout_width="20dp"
                android:layout_height="24dp"
                android:layout_alignTop="@+id/black_yanzhen4"
                android:layout_alignLeft="@+id/second"
                android:layout_alignStart="@+id/second" />
            <!--黑点4-->
            <ImageView
                android:visibility="gone"
                android:layout_marginLeft="14dp"
                android:id="@+id/black_yanzhen4"
                android:src="@drawable/user_black_yanzhen"
                android:layout_width="20dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/minute"
                android:layout_alignStart="@+id/minute" />
            <TextView
                android:layout_marginTop="9dp"
                android:gravity="center_horizontal"
                android:textSize="22sp"
                android:textColor="#000000"
                android:visibility="visible"
                android:layout_marginLeft="14dp"
                android:id="@+id/pop_view_text_4"
                android:src="@drawable/user_black_yanzhen"
                android:layout_width="20dp"
                android:layout_height="24dp"
                android:layout_alignLeft="@+id/minute"
                android:layout_alignStart="@+id/minute" />

            <TextView
                android:gravity="center_horizontal"
                android:textColor="#000000"
                android:textSize="22sp"
                android:visibility="visible"
                android:id="@+id/pop_view_text_1"
                android:layout_width="20dp"
                android:layout_height="24dp"
                android:layout_alignBaseline="@+id/pop_view_text_2"
                android:layout_alignBottom="@+id/pop_view_text_2"
                android:layout_alignRight="@+id/fore"
                android:layout_alignEnd="@+id/fore"
                android:layout_marginRight="14dp"
                android:layout_marginEnd="14dp" />
        </RelativeLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="请输入验证码"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />

        <TextView
            android:gravity="center"
            android:text="验证码已发送至"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/text_view_phone" />
        <TextView
            android:visibility="visible"
            android:gravity="center"
            android:text="60s后重发"
            android:background="@drawable/shape_kuang_pop"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/text_count_down"
            android:layout_below="@+id/text_view_phone"
            android:layout_centerHorizontal="true" />
        <Button
            android:visibility="gone"
            android:gravity="center"
            android:text="点击重新发送"
            android:background="@drawable/shape_kuang_pop"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/first_count_down"
            android:layout_below="@+id/text_view_phone"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>
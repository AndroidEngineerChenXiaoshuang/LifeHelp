<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popupWindow_edit"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/shape_background_corners_pop"
        android:layout_width="300dp"
        android:layout_height="200dp">
        <Button
            android:id="@+id/edit_popup_return"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/popup_return"
            android:layout_width="18dp"
            android:layout_height="18dp" />
        <Button
            android:id="@+id/edit_popup_delete"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/popup_delete"
            android:layout_width="18dp"
            android:layout_height="18dp" />

        <RelativeLayout
            android:layout_marginTop="135dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <EditText

            android:focusable="true"
            android:focusableInTouchMode="true"
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginLeft="60dp"
            android:background="@drawable/shape_kuang_pop"
            android:id="@+id/edit_two"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <EditText
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginLeft="120dp"
            android:background="@drawable/shape_kuang_pop"
            android:id="@+id/edit_three"
            android:layout_width="48dp"
            android:layout_height="48dp"
            />
        <EditText
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginLeft="180dp"
            android:background="@drawable/shape_kuang_pop"
            android:id="@+id/edit_fore"
            android:layout_width="48dp"
            android:layout_height="48dp"
            />

        <EditText
            android:maxLength="1"
            android:gravity="center"
            android:background="@drawable/shape_kuang_pop"
            android:id="@+id/edit_one"
            android:layout_width="48dp"
            android:layout_height="48dp"
            >
            <requestFocus/>
        </EditText>
        </RelativeLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="登陆"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />

        <ImageView
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_svg_loading"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/verification_base64" />
        <Button
            android:id="@+id/update_image"
            android:text="换一换"
            android:background="#00ffffff"
            android:layout_centerInParent="true"
            android:layout_below="@id/verification_base64"
            android:layout_width="50dp"
            android:layout_height="30dp" />
    </RelativeLayout>
</RelativeLayout>